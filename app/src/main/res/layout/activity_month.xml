<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.year.YearActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:ignore="RelativeOverlap">

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="1"
            tools:text="二零一六年"
            android:textAppearance="@style/TextAppearance.KhangXiDict"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_compose"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_bg"
            android:text="@string/label_compose"
            android:textAppearance="@style/TextAppearance.FLongZhao"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/month"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:paddingStart="80dp"
        android:paddingEnd="80dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp" />

</RelativeLayout>
