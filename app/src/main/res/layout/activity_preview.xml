<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iamwent.diary.modules.preview.PreviewActivity">

    <WebView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/layout_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:paddingBottom="24dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_compose"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_width"
            android:layout_marginEnd="24dp"
            android:background="@drawable/ic_bg"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/label_edit"
            android:textAppearance="@style/TextAppearance.FLongZhao"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size"
            tools:ignore="ButtonStyle,ContentDescription" />

        <Button
            android:id="@+id/btn_share"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_width"
            android:background="@drawable/ic_bg"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/label_share"
            android:textAppearance="@style/TextAppearance.FLongZhao"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size"
            tools:ignore="ButtonStyle,ContentDescription" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_width"
            android:layout_marginStart="24dp"
            android:background="@drawable/ic_bg"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/label_delete"
            android:textAppearance="@style/TextAppearance.FLongZhao"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size"
            tools:ignore="ButtonStyle,ContentDescription" />
    </LinearLayout>
</FrameLayout>
